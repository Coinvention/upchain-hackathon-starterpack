{
  "name": "upchain-hackathon-starterpack",
  "version": "2.3.0",
  "description": "This repository gives you a fast start into the World of developing for the  [Blockchain](https://en.wikipedia.org/wiki/Block_chain),  write smart [contracts](https://en.wikipedia.org/wiki/Smart_contract) in Solidity and provide [Dapps](http://dapps.ethercasts.com/) to access them.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "npm run start:all",
    "preinstall": "npm run setup:clean",
    "postinstall": "npm run setup:proxy",
    "setup:clean": "sh ./scripts/clean.sh",
    "setup:proxy": "sh ./scripts/setup-proxy.sh",
    "stop:all": "pm2 delete all --silent -f",
    "start:proxy": "npm run start:proxy:app && npm run start:proxy:rpc",
    "start:proxy:app": "pm2 start .starterpack/proxy/app-proxy.js",
    "start:proxy:rpc": "pm2 start .starterpack/proxy/proxy.js ",
    "stop:testrpc": "pm2 delete testrpc",
    "start:testrpc": "pm2 start testrpc",
    "prestart:truffle": "truffle migrate",
    "start:truffle": "pm2 start truffle -- serve",
    "start:all": "npm run start:testrpc && npm run start:truffle && npm run start:proxy",
    "migrate:contracts": "truffle migrate",
    "test:contracts": "truffle test",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Upchain/upchain-hackathon-starterpack.git"
  },
  "author": "Upchain GmbH",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Upchain/upchain-hackathon-starterpack/issues"
  },
  "homepage": "https://github.com/Upchain/upchain-hackathon-starterpack#readme",
  "dependencies": {
    "upchain-web3-http-provider": "^1.11.1",
    "ethereumjs-testrpc": "^2.2.7",
    "pm2": "^1.1.3",
    "truffle": "^2.0.8"
  }
}
